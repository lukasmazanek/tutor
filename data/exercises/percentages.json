      ],
      "hint": "100% více = dvojnásobek",
      "common_mistake": "N"
    },
    {
      "id": "pct-009",
      "difficulty": 4,
      "type": "calculation",
      "question": "Po zvýšení o 25% stojí zboží 500 Kč. Kolik stálo před zvýšením?",
      "correct_answer": "400",
      "solution_steps": [
        "Nová cena = 1,25 · původní",
